<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MenuStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/space_screen_small</item>
        <item name="android:paddingTop">@dimen/space_screen_small</item>
        <item name="android:paddingRight">@dimen/space_screen_small</item>
        <item name="android:paddingBottom">@dimen/space_screen_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/space_screen_small</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="TextColor">
        <item name="colorPrimary">@color/colorTextBlack</item>
        <item name="colorPrimaryDark">@color/colorTextBlack</item>
        <item name="colorAccent">@color/colorTextBlack</item>
<!--        <item name="android:statusBarColor">@color/colorTextBlack</item>-->
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textCursorDrawable">@color/colorTextBlack</item>
    </style>
</resources>